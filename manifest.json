{
  "manifest_version": 3,
  "name": "LinkedIn Profile Pic Changer",
  "version": "1.0",
  "description": "Changes the profile pictures in LinkedIn posts.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/feed/*"],
      "js": ["script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
